@model IEnumerable<MallRoof.Models.City>

@{
    ViewBag.Title = "Города";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Новый город", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.ActionLink("Изменить", "Edit", new { id=item.CityId }) |            
            @Html.ActionLink("Удалить", "Delete", new { id=item.CityId })
        </td>
    </tr>
}

</table>
