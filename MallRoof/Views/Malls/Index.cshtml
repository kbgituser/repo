@model PagedList.IPagedList<MallRoof.Models.Mall>
@using PagedList.Mvc;

@{
    ViewBag.Title = "Центры";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Торговые центры</h2>

<p class="text-center">
    @*@Html.ActionLink("Новый центр", "Create")*@
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().Address)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().NumberOfFloors)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().ParkingExists)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().ParkingPayment)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().ParkingInsideExists)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().ParkingInsidePayment)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Address)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.NumberOfFloors)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.ParkingExists, new { @onclick = "return false"})
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ParkingPayment)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ParkingInsideExists)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ParkingInsidePayment)
        </td>
        <td>
            @*@Html.ActionLink("Добавить помещение к этому центру", "Create", "Premises", new { id = item.MallId }, null) |
            @Html.ActionLink("Изменить", "Edit", new { id = item.MallId }) |
            @Html.ActionLink("Details", "Details", new { id = item.MallId }) |
            @Html.ActionLink("Удалить", "Delete", new { id = item.MallId }) |*@
        </td>
    </tr>
    }
</table>
<div class="text-center">
    Страница @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) из @Model.PageCount
    @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
</div>
