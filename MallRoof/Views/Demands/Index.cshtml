@*@model IEnumerable<MallRoof.Models.Demand>*@
@model PagedList.IPagedList<MallRoof.Models.Demand>
@using PagedList.Mvc;

@{
    ViewBag.Title = "Запросы на помещение";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Новый запрос", "Create")
</p>

@RenderPage("~/Views/Shared/DemandSearchForm.cshtml")
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.SingleOrDefault().PriceFrom)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SingleOrDefault().PriceTo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SingleOrDefault().AreaFrom)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SingleOrDefault().AreaTo)
        </th>

        <th>
            @*@Html.DisplayNameFor(model => model.SingleOrDefault().Phone)*@
            Телефон
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.SingleOrDefault().EndDate)*@
            Дата окончания
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PriceFrom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PriceTo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AreaFrom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AreaTo)
            </td>

            <td>
                @if (!User.Identity.IsAuthenticated)
                {
                    @Html.ActionLink("Зарегистрироваться", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })
                    <span>/</span>
                    @Html.ActionLink("Войти", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })
                }
                else
                {@Html.DisplayFor(modelItem => item.Phone)}


            </td>
            <td>
                @*@Html.DisplayFor(modelItem => item.EndDate)*@
                @item.EndDate.ToShortDateString()
            </td>
            <td>
                @Html.ActionLink("Подробнее", "Details", new { id = item.DemandId })
                @if (item.DemandStatus == MallRoof.Models.DemandStatus.Active)
                {<span>| </span>@Html.ActionLink("Сделать предложение", "Create", "Proposals", new { demandId = item.DemandId }, null)}
            else
            {
                <br />
                <span>Запрос не активен. Вы не можете сделать предложение!</span>
            }

            </td>
        </tr>
    }

</table>
Страница @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) из @Model.PageCount
@Html.PagedListPager(Model, page => Url.Action("Index", new { page }))