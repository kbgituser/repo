@model MallRoof.Models.UserRoleEdit

@{
    ViewBag.Title = "Пользователь";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Пользователь</h2>

<div class="row">
    <div class="col-md-6">
        <table class="table">
            <tr>
                <th>
                    Роли у данного пользователя
                </th>
                <th>Удалить</th>
            </tr>
            @foreach (var item in Model.UserRoles)
            {
                <tr>
                    <td>
                        @*@Html.DisplayFor(modelItem => item.Name)
                        <br />*@
                        @item.Name
                    </td>
                    <td>@Html.ActionLink("Удалить", "DeleteRoleFromUser", new { UserId = Model.User.Id, RoleId = item.Id })</td>
                </tr>
            }
        </table>
    </div>

    <div class="col-md-6">
        <table class="table">
            <tr>
                <th>
                    Все доступные роли
                </th>
                <th></th>
            </tr>
            @foreach (var item in Model.AllRoles)
            {
                <tr>
                    <td>
                        @*@Html.DisplayFor(modelItem => item.Name)
                        <br />*@
                        @item.Name
                    </td>
                    <td>@Html.ActionLink("Добавить пользователя в роль", "AddRoleToUser", new { UserId = Model.User.Id, RoleId = item.Id })</td>
                </tr>
            }
        </table>
    </div>
</div>

