<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Управление помещением</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/myJs")
    @*<script src="~/Scripts/mine/MyJs.js"></script>*@
    
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("База помещений", "Index", "Premises", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @*<li>@Html.ActionLink("Home", "Index", "Home")</li>
        <li>@Html.ActionLink("About", "About", "Home")</li>
        <li>@Html.ActionLink("Contact", "Contact", "Home")</li>*@

                    

                    @if (User.IsInRole("Admin"))
                    {                        
                        <li>@Html.ActionLink("Роли", "RoleIndex", "Users")</li>
                        <li>@Html.ActionLink("Пользователи", "Index", "Users")</li>
                    }
                    @if (!User.Identity.IsAuthenticated)
                    {
                        <li>@Html.ActionLink("Центры", "Index", "Malls")</li>
                        <li>@Html.ActionLink("Помещения", "Index", "Premises")</li>
                    }

                    @if (User.IsInRole("Landlord"))
                    {
                        <li>@Html.ActionLink("Центры", "IndexMall", "Malls")</li>
                        <li>@Html.ActionLink("Помещения", "Index", "Premises")</li>
                    }



                </ul>
                @Html.Partial("_LoginPartial")
            </div>
            <li class="dropdown">
                <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                    Меню
                    <span class="caret"></span>
                </a>
                <ul class="dropdown-menu" role="menu">
                    <li>@Html.ActionLink("Центры", "Index", "Malls")</li>
                    <li>@Html.ActionLink("Помещения", "Index", "Premises")</li>
                </ul>
            </li>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Управление помещением</p>
        </footer>
    </div>

    
    @RenderSection("scripts", required: false)
</body>
</html>
