<!DOCTYPE html>
<html>
<head>
    <meta name="yandex-verification" content="05146922c712609c" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    @*<title>@ViewBag.Title - Управление помещением</title>*@
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/myJs")
    @*<script src="~/Scripts/mine/MyJs.js"></script>*@

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Kenseler", "Index", "Premises", new { area = "" }, 
               new { @class = "navbar-brand text-uppercase text-primary" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @*<li>@Html.ActionLink("Home", "Index", "Home")</li>
        <li>@Html.ActionLink("About", "About", "Home")</li>
        <li>@Html.ActionLink("Contact", "Contact", "Home")</li>*@

                    <li>@Html.ActionLink("О проекте", "About", "Home")</li>
                    <li>@Html.ActionLink("Иструкции", "Instruction", "Home")</li>

                    @if (User.IsInRole("Admin"))
                    {
                        <li>@Html.ActionLink("Роли", "Index", "RolesAdmin")</li>
                        <li>@Html.ActionLink("Пользователи", "Index", "Users")</li>
                        <li>@Html.ActionLink("Города", "Index", "Cities")</li>
                    }
                    @if (!User.Identity.IsAuthenticated)
                    {
                        <li>@Html.ActionLink("Центры", "Index", "Malls")</li>
                        <li>@Html.ActionLink("Помещения", "Index", "Premises")</li>
                    }

                    @if (User.IsInRole("Landlord"))
                    {
                        <li>@Html.ActionLink("Центры", "Index", "Malls")</li>
                        <li>@Html.ActionLink("Мои центры", "Index", "Malls", new { getMine = true }, null)</li>
                        <li>@Html.ActionLink("Помещения", "Index", "Premises")</li>
                        <li>@Html.ActionLink("Мои помещения", "Index", "Premises", new { getMine = true }, null)</li>
                    }
                    <li>@Html.ActionLink("Контакты", "Contact", "Home")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
            @*<li class="dropdown">
                <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                    Меню
                    <span class="caret"></span>
                </a>
                <ul class="dropdown-menu" role="menu">
                    <li>@Html.ActionLink("Центры", "Index", "Malls")</li>
                    <li>@Html.ActionLink("Помещения", "Index", "Premises")</li>                    
                    <li>@Html.ActionLink("Мои центры", "Index", "Malls", new { getMine = true }, null)</li>                    
                    <li>@Html.ActionLink("Мои помещения", "Index", "Premises", new { getMine = true }, null)</li>
                </ul>
            </li>*@
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer class="text-center">
            <p>&copy; @DateTime.Now.Year - Управление помещением</p>
        </footer>
    </div>

    
    @RenderSection("scripts", required: false)
</body>
</html>
